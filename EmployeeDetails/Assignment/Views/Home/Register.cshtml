@model Employees.Models.Employee

@{
    ViewData["Title"] = "Register";
}

<h1 style="text-align:center">@ViewData["Title"]</h1>
<hr />
<form asp-action="Register" asp-controller="Home" method="post" class="mt-3">
    <table style="margin-left:11.4cm">
        <tr>
            <td>
                <label asp-for="Name">Name : </label>
            </td>
            <td>
                <input asp-for="Name" placeholder="Enter your name" /><br />
                <span asp-validation-for="Name" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="Home">City : </label>
            </td>
            <td>
                <input asp-for="Home" placeholder="Enter your city" /><br />
                <span asp-validation-for="Home" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="MailId">Mail ID : </label>
            </td>
            <td>
                <input asp-for="MailId" placeholder="Enter your mailid" /><br />
                <span asp-validation-for="MailId" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="PhoneNumber">Phone Number : </label>
            </td>
            <td>
                <input asp-for="PhoneNumber" placeholder="Enter your phone number" /><br />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </td>
        </tr>
    </table>
    <br />
    <div class="text-center">
        <input class="btn btn-primary" type="submit" />
        <a href="@Url.Action("Index","Home")" class="btn btn-primary">Home</a>
    </div>
</form>

